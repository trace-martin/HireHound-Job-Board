<!DOCTYPE html>
<html>
  <head>
    <title>My Website</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <!-- Add your custom stylesheets -->
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="/">My Website</a>
          {{#if isAuthenticated}}
            <div class="navbar-nav">
              <a class="nav-link" href="/userProfile">{{currentUser.username}}</a>
            </div>
          {{/if}}
          <div class="navbar-nav ms-auto">
            {{#if isAuthenticated}}
              <button id="profileBtn" class="nav-link btn btn-link">My Profile</button>
              <button id="jobsBtn" class="nav-link btn btn-link">My Jobs</button>
              <a class="nav-link" href="/logout">Logout</a>
            {{else}}
              <a class="nav-link" href="/login">Login/Signup</a>
            {{/if}}
          </div>
        </div>
      </nav>
    </header>

    <main>
      <div id="contentContainer">
        {{!-- will be updated with handlebars --}}
      </div>
    </main>

    <footer>
      <!-- Footer content -->
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/public/js/main.js"></script>
  </body>
</html>